<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_movie">

    <fragment
        android:id="@+id/navigation_movie"
        android:name="com.dicoding.movieyes.ui.movies.MoviesFragment"
        android:label="@string/movie"
        tools:layout="@layout/fragment_movies" />

    <fragment
        android:id="@+id/navigation_series"
        android:name="com.dicoding.movieyes.ui.tv.TvShowFragment"
        android:label="@string/series"
        tools:layout="@layout/fragment_tv_show" />

    <fragment
        android:id="@+id/navigation_bookmarks"
        android:name="com.dicoding.movieyes.ui.bookmarks.BookmarksFragment"
        android:label="@string/bookmark"
        tools:layout="@layout/fragment_bookmarks" />
